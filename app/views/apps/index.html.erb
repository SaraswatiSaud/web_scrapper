<p id="notice"><%= notice %></p>

<%= button_to 'Scrape', scrape_apps_path %>

<h1>Apps</h1>

<table border>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Email</th>
      <th>Help link</th>
      <th>Categories</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.description %></td>
        <td><%= app.email %></td>
        <td><%= app.help_link %></td>
        <td>
          <% app.categories.each do |cat| %>
            <li><%= cat %></li>
          <% end %>
        </td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_app_path %>
